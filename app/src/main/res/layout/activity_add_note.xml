<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddNoteActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_note_id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_note_id_spinner"
        android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
        app:menu="@menu/add_note_toolbar_menu"
        android:background="@color/orange"
        />
    <Spinner
        android:id="@+id/add_note_id_spinner"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_note_id_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/add_note_id_date_time_view"
        android:contentDescription="Choose category of note"
        android:background="@color/blue"
        />
    <TextView
        android:id="@+id/add_note_id_date_time_view"
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/add_note_id_toolbar"
        app:layout_constraintLeft_toRightOf="@id/add_note_id_spinner"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/lightPink"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/add_note_id_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:importantForAutofill="no"
        android:background="@android:color/transparent"
        android:inputType="textMultiLine"
        android:hint="@string/add_note_hint_description"
        android:gravity="top"
        android:padding="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>