<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_recycler_view_main_layout">

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        android:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/note_id_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/note_id_description"/>

<!--            <TextView-->
<!--                android:id="@+id/note_id_title"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="15dp"-->
<!--                android:layout_marginBottom="5dp"-->
<!--                android:textSize="15sp"-->
<!--                android:textStyle="bold"-->
<!--                android:text="Title"-->
<!--                app:layout_constraintBottom_toTopOf="@+id/note_id_description"-->
<!--                app:layout_constraintStart_toEndOf="@+id/note_id_number" />-->

            <TextView
                android:id="@+id/note_id_description"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginStart="16dp"
                android:text="Decription"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/note_id_number"
                app:layout_constraintStart_toEndOf="@+id/note_id_number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/note_id_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/note_id_description"
                android:layout_margin="5dp"
                android:text="20-04-23 17:59:59"
                android:textSize="10sp"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>